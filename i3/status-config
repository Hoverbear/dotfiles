general {
    colors = true
        interval = 5
}

order += "disk /"
order += "volume master"
order += "wireless _first_"
order += "tztime berlin"
order += "tztime local"
order += "battery 0"

wireless _first_ {
    format_up = "Net: %ip %quality/%essid"
    format_down = "Net: down"
}

disk "/" {
    format = "disk: %used/%total"
}

battery 0 {
    format = "ðŸ”‹%percentage"
}

tztime berlin {
    format = "Berlin: %m-%d %H:%M"
    timezone = "Europe/Berlin"
}

tztime local {
    format = "Local: %m-%d %H:%M"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
